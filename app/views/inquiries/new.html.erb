<%= render 'shared/error_messages', :target => @inquiry %>

<div class="contact_form">
    <%= form_for(@inquiry) do |f| %>
        <%= f.field_container :name do %>
            <%= f.label :name, t(:your_name) %><span class="required">*</span>
            <%= f.text_field :name %>
        <% end %>
        <%= f.field_container :email do %>
            <%= f.label :email, t(:your_email) %><span class="required">*</span>
            <%= f.text_field :email %>
        <% end %>
        <%= f.field_container :inquiry_type do %>
            <%= f.label :inquiry_type, t(:type_inquiry) %>
            <%= f.select :inquiry_type, options_for_select(translate_types), :include_blank => t(:please_select) %>
        <% end %>
        <%= f.field_container :order_no do %>
            <%= f.label :name, t(:number_order) %>
            <%= f.text_field :order_no %>
        <% end %>
        <%= f.field_container :message do %>
            <%= f.label :message, t(:message) %> <span class="required">*</span>
            <%= f.text_area :message, {:cols => 60, :rows => 4, :class => 'fullwidth'} %>
        <% end %>

        <% if Spree::Captcha::Config[:use_captcha] %>
            <%= show_simple_captcha %>
        <% end %>
        <%= f.submit t(:send) %>
    <% end %>
</div>